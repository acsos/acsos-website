---
interface Props {
	title: string;
	subtitle?: string;
	styleClass?: string;
	showSocialLinks?: boolean;
}

const { title, subtitle, styleClass = '', showSocialLinks = false } = Astro.props;
---

<section id="banner" class:list={['major', styleClass]}>
	<div class="inner">
		<header class="major">
			<h1>{title}</h1>
		</header>
		{subtitle && <p>{subtitle}</p>}
		<div class="content">
			{showSocialLinks && (
				<ul class="actions">
					<li>
						<a href="https://github.com/acsos" class="icon brands alt fa-github">
							<span class="label">GitHub</span>
						</a>
					</li>
					<li>
						<a href="https://discord.gg/XpGQhQMF3D" class="icon brands alt fa-discord">
							<span class="label">Discord</span>
						</a>
					</li>
					<li>
						<a href="https://www.linkedin.com/company/acsos/" class="icon brands alt fa-linkedin-in">
							<span class="label">LinkedIn</span>
						</a>
					</li>
					<li>
						<a href="https://www.instagram.com/acsos.conf" class="icon brands alt fa-instagram">
							<span class="label">Instagram</span>
						</a>
					</li>
					<li>
						<a href="https://www.x.com/ACSOSconf" class="icon brands alt fa-x-twitter">
							<span class="label">X</span>
						</a>
					</li>
					<li>
						<a href="https://www.youtube.com/@acsosconf" class="icon brands alt fa-youtube">
							<span class="label">Mastodon</span>
						</a>
					</li>
				</ul>
			)}
			<slot />
		</div>
	</div>
</section>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>
<style is:global>
  #banner:after {
    opacity: 0.3 !important;
  }
</style>

<script is:inline>
  const banner = document.querySelector('#banner');
  if (banner) {
    banner.style.backgroundImage = 'none';
  }
  VANTA.NET({
    el: "#banner",
    mouseControls: true,
    touchControls: true,
    gyroControls: false,
    minHeight: 200.00,
    minWidth: 200.00,
    scale: 1.00,
    scaleMobile: 1.00,
    color: 0x3fa9f5,
    backgroundColor: 0x242943,
    points: 10.00,
    maxDistance: 22.00,
    spacing: 18.00
  })
</script>
